# Taiga's URLs - Variables to define where Taiga should be served
TAIGA_SCHEME=https               # use HTTPS because Coolify auto-generates SSL certs
TAIGA_DOMAIN=taiga.example.com   # <-- REPLACE with your actual domain
SUBPATH=                         # leave blank unless you're running on a subpath
WEBSOCKETS_SCHEME=wss            # secure websockets

# Taiga's Secret Key - Variable to provide cryptographic signing
SECRET_KEY=your-secure-random-secret-key

# Taiga's Database settings
POSTGRES_USER=taiga
POSTGRES_PASSWORD=taiga

# Taiga's SMTP settings
EMAIL_BACKEND=console            # change to "smtp" in production
EMAIL_HOST=smtp.host.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=user
EMAIL_HOST_PASSWORD=password
EMAIL_DEFAULT_FROM=changeme@example.com
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False

# Taiga's RabbitMQ settings
RABBITMQ_USER=taiga
RABBITMQ_PASS=taiga
RABBITMQ_VHOST=taiga
RABBITMQ_ERLANG_COOKIE=secret-erlang-cookie

# Taiga's Attachments
ATTACHMENTS_MAX_AGE=360

# Taiga's Telemetry
ENABLE_TELEMETRY=True
